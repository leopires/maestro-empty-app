<?xml version="1.0"?>
<!DOCTYPE view SYSTEM "../../../../public/layouts/view.dtd">
<view>
    <mbox id="box1" caption="Exercício 2" close=">hello-world/main/main">
        <mform id="formSample" title="Cadastro de Pessoas">
            <fields>
                <mvcontainer>
                    <mhcontainer>
                        <mtextfield id="txtNome" label="Nome" width="250px"/>
                        <mtextfield id="txtSobrenome" label="Sobrenome" width="300px"/>
                    </mhcontainer>
                    <mcalendarfield id="txtDataNascimento" label="Nascimento"/>
                </mvcontainer>
            </fields>
            <buttons>
                <mbutton id="btnPost" text="Enviar" action="$this->data->action"/>
            </buttons>
            <validators>
                <mrequiredvalidator field="txtNome" message="O nome não foi informado."/>
                <mrequiredvalidator field="txtSobrenome" message="O sobrenome não foi informado."/>
                <mrequiredvalidator field="txtDataNascimento" message="A data de nascimento não foi informada."/>
            </validators>
        </mform>
    </mbox>
</view>